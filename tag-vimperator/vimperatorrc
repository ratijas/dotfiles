" fix russian tab group switch
nmap <C-]> <C-`>

" overwrite firefox standard search bar
nmap <M-F> <Esc>/
vmap <M-F> <Esc>/
imap <M-F> <Esc>/
cmap <M-F> <Esc>/

nmap <M-G> <Esc>n
vmap <M-G> <Esc>n
imap <M-G> <Esc>n
cmap <M-G> <Esc>n

nmap <leader>/ :set hlsearch!<CR>

" 'new' in firefox 42.
" https://github.com/vimperator/vimperator-labs/issues/219
set! browser.tabs.closeWindowWithLastTab=false
map <M-w> :q<CR>
imap <M-w> <Esc>:q<CR>

" rearranging tabs
map <C-S-Left> :tabmove -1<CR>
map <C-S-Right> :tabmove +1<CR>

" fixing up for linux
noremap <A-[> :back<CR>
inoremap <A-[> <Esc>:back<CR>

noremap <A-]> :forward<CR>
inoremap <A-]> <Esc>:forward<CR>

noremap <A-{> :tabprevious<CR>
inoremap <A-{> <Esc>:tabprevious<CR>

noremap <A-}> :tabnext<CR>
inoremap <A-}> <Esc>:tabnext<CR>

" insert space after cursor
inoremap <S-Space> <Space><Left>

" fullscreen, no toolbars
" n for None
noremap <leader>n :set gui=none<CR>
" a for All
noremap <leader>a :set gui=all,nobookmarks,nomenu<CR>
" statusline in fullscreen
" js statusline.setVisibility(statusline.setVisibility.TOGGLE)

" some websites stealing keys
map <M-;> :
imap <M-;> <Esc>:

" switch search engines
noremap <leader>s :set defsearch=
set defsearch=go

" shortcut
nnoremap x :ju<CR>

" firefox panorama (groups of tabs)
noremap <M-e> :panorama<Space>
inoremap <M-e> <Esc>:panorama<Space>
noremap <Silent> <M-S-e> :panorama<Space>switch<Space>
inoremap <Silent> <M-S-e> <Esc>:panorama<Space>switch<Space>

" window fullscreen
map <Silent> <Leader>fs :set<Space>fs!<CR>

" get rid of scrollbars!
set noscrollbars

" add ssl connection status indicator
set status="input,location,bookmark,history,tabcount,ssl,position"

colorscheme indigo-fx3

set editor="/usr/bin/vim"

set hintchars=hjklasdfgyuiopqwertnmzxcvb

set animations

command -description "edit .vimperatorrc in default vim" Vimpconfig silent !echo "exec vim -c 'set ft=vim' ~/.vimperatorrc" > "$TMPDIR"/vimpconfig.command; chmod +x "$TMPDIR"/vimpconfig.command; open "$TMPDIR"/vimpconfig.command;

" directory tree
silent cd ~

" encoding shortcut
command! -nargs 0 UTF8 set encoding=UTF-8
nmap <M-S-u> :UTF8<CR>

" switch to last active tab when closing one
nmap d :bdelete<Space>-select<Space>lastactive<CR>

set urlseparator=,,\\s

set passthrough

noremap <C-p> <C-c><Esc>p
noremap <C-S-p> <C-c><Esc>P

nmap gor :buffer! radio<CR>
imap -urls codetest\\.edu\\.innopolis\\.ru @t <Esc>@t<Esc>

noremap <C-S-c> <C-c>

javascript liberator.beep = function() { return false; }
